@model IEnumerable<foodfun.Models.Users>

@{
    ViewBag.Title = "會員角色資料";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title"> @ViewBag.Title</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    @* <th> @Html.DisplayNameFor(model => model.mno)</th>*@
                                    <th> @Html.DisplayNameFor(model => model.role_no)</th>
                                    <th> @Html.DisplayNameFor(model => model.mname)</th>
                                    <th> @Html.DisplayNameFor(model => model.account_name)</th>
                                    <th> @Html.DisplayNameFor(model => model.isvalidate)</th>
                                    <th> 功能選項</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.mno)
                                        </td>*@
                                        <td>
                                            @Backend.GetCodeNameRole(item.role_no)
                                            @*@Html.DisplayFor(modelItem => item.role_no)*@
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.mname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.account_name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.isvalidate)
                                        </td>

                                        <td>
                                            @Html.ActionLink("修改", "Edit", "RoleAuthorized", new { id = item.mno }, new { @class = "btn btn-success" })
                                            @*@Html.ActionLink("刪除", "Delete", "RoleAuthorized", new { id = item.mno }, new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?')" })*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->






















