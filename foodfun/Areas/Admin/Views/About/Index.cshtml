@model IEnumerable<foodfun.Models.About>

@{
    ViewBag.Title = "公司理念";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="content">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div>
                            <strong class="card-title"> @ViewBag.Title</strong>
                        </div>
                    </div>
                    <div class="card-body">
                        <table style=" width: 100%" id="DatatableList" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th> @Html.DisplayNameFor(model => model.sortid)</th>
                                    <th> @Html.DisplayNameFor(model => model.corevalue_title)</th>
                                    <th style="width:20%"> @Html.DisplayNameFor(model => model.corevalue_descpt)</th>
                                    <th colspan="2"> @Html.DisplayNameFor(model => model.about_path)</th>
                                    <th colspan="2"> @Html.DisplayNameFor(model => model.corevalue_path)</th>
                                    <th> @Html.ActionLink("新增記錄", "Create", "About", null, new { @class = "btn btn-primary" })</th>
                                </tr>
                            </thead>
                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.sortid)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.corevalue_title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.corevalue_descpt)
                                        </td>
                                        <td>

                                            <img src="@item.about_path" alt="x" />
                                        </td>
                                        <td>
                                            <button class="btn btn-info mt-5" style="background-color:#FFE4E1"> @Html.ActionLink("上傳", "Upload", new { sortid = item.sortid.ToString(),info="at"})</button>
                                        </td>
                                        <td>

                                            <img src="@item.corevalue_path"  alt="x" />
                                        </td>
                                        <td>
                                            <button class="btn btn-info mt-5" style="background-color:#FFE4E1"> @Html.ActionLink("上傳", "Upload", new { sortid = item.sortid.ToString(),info="val"})</button>
                                        </td>

                                        <td class="text-center">

                                            @Html.ActionLink("修改", "Edit", "About", new { id = item.sortid }, new { @class = "btn btn-success my-3" })
                                            <br />

                                            @Html.ActionLink("刪除", "Delete", "About", new { id = item.sortid }, new { @class = "btn btn-danger", onclick = "return confirm('是否確定要刪除?')" })



                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#DatatableList').DataTable({

            "language": {
                "sProcessing": "處理中...",
                "sLengthMenu": "顯示 _MENU_ 項結果",
                "sZeroRecords": "沒有匹配結果",
                "sInfo": "顯示第 _START_ 至 _END_ 項結果，共 _TOTAL_ 項",
                "sInfoEmpty": "顯示第 0 至 0 項結果，共 0 項",
                "sInfoFiltered": "(從 _MAX_ 項結果過濾)",
                "sInfoPostFix": "",
                "sSearch": "查詢:",
                "sUrl": "",
                "oPaginate": {
                    "sFirst": "首頁",
                    "sPrevious": "上頁",
                    "sNext": "下頁",
                    "sLast": "尾頁"
                }
            }

        })


    })






</script>
