@model IEnumerable<foodfun.Models.Payments>

@{
    ViewBag.Title = "付款設定";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>付款設定</h2>


            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title"> @ViewBag.Title</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th> @Html.DisplayNameFor(model => model.rowid)</th>
                                        <th> @Html.DisplayNameFor(model => model.paid_no)</th>
                                        <th> @Html.DisplayNameFor(model => model.paid_name)</th>
                                        <th> @Html.DisplayNameFor(model => model.remark)</th>
                                        <th>  @Html.ActionLink("新增記錄", "Create", "Payments", null, new { @class = "btn btn-primary" })</th>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.rowid)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.paid_no)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.paid_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.remark)
                                            </td>


                                            <td>

                                                @Html.ActionLink("修改", "Edit", "Payments", new { id = item.rowid }, new { @class = "btn btn-info" })

                                                @Html.ActionLink("刪除", "Delete", "Payments", new { id = item.rowid }, new { @class = "btn btn-success", onclick = "return confirm('是否確定要刪除?')" })


                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>





