@model IEnumerable<foodfun.Models.Payments>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2付款設定</h2>

<html class="no-js" lang="">



<body class="Payments-content">

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">

                            @Html.ActionLink("新增記錄", "Create", "Payments", null, new { @class = "btn btn-primary" })

                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <td> @Html.DisplayNameFor(model => model.rowid)</td>
                                        <td> @Html.DisplayNameFor(model => model.paid_no)</td>
                                        <td> @Html.DisplayNameFor(model => model.paid_name)</td>
                                        <td> @Html.DisplayNameFor(model => model.remark)</td>

                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.rowid)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.paid_no)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.paid_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.remark)
                                            </td>


                                            <td>

                                                @Html.ActionLink("修改", "Edit", "Payments", new { id = item.rowid }, new { @class = "btn btn-info" })

                                                @Html.ActionLink("刪除", "Delete", "Payments", new { id = item.rowid }, new { @class = "btn btn-success", onclick = "return confirm('是否確定要刪除?')" })


                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        @*<td colspan="12">

                                                @Html.PagedListPager((IPagedList)Model, x => Url.Action("Index", new { page = x }))
                                                      轉成(IPagedList) 型別,  表頭table (roleList)   ,Url.Action  ( "list"指按下去產生list清單,之後看給Page多少


                                            </td>*@
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->


    <div class="clearfix"></div>



</body>
</html>

