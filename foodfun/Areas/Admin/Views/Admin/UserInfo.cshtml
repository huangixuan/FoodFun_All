@model foodfun.Models.Users

@{
    ViewBag.Title = "個人資料修改";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}





<div class="content my-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.mno)
                @Html.HiddenFor(model => model.account_name)
                @Html.HiddenFor(model => model.password)
                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.role_no)
                @Html.HiddenFor(model => model.varify_code)
                @Html.HiddenFor(model => model.isvarify)
                @Html.HiddenFor(model => model.isvalidate)



                <div class="card">
                    <div class="card-header">
                        <strong>@ViewBag.Title</strong>
                    </div>
                    <div class="card-body card-block">


                        <div class="row form-group">
                            <div class="col col-md-3">@Html.LabelFor(model => model.account_name, htmlAttributes: new { @class = "form-control-label" })</div>
                            <div class="col-12 col-md-9">
                                <p class="form-control-static">@Html.DisplayFor(model => model.account_name)</p>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">@Html.LabelFor(model => model.mname, htmlAttributes: new { @class = "form-control-label" })</div>
                            <div class="col-12 col-md-9">
                                @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">@Html.LabelFor(model => model.birthday, htmlAttributes: new { @class = "form-control-label" })</div>
                            <div class="col-12 col-md-9">
                                @Html.EditorFor(model => model.birthday, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.birthday, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col col-md-3">@Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "form-control-label" })</div>
                            <div class="col-12 col-md-9">
                                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="row form-group">
                            <div class="col col-md-3">@Html.LabelFor(model => model.address, htmlAttributes: new { @class = "form-control-label" })</div>
                            <div class="col-12 col-md-9">
                                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col col-md-3">@Html.LabelFor(model => model.email, htmlAttributes: new { @class = "form-control-label" })</div>
                            <div class="col-12 col-md-9">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> 確認
                        </button>

                    </div>
                </div>
            }
        </div>
    </div>
</div>



