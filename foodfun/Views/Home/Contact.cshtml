@model foodfun.Models.Company

@{
    ViewBag.Title = "聯絡我們";
}

<!--? Hero Area Start-->
<div class="slider-area ">
    <div class="single-slider slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>@ViewBag.Title</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--? Hero Area End-->




<section class="contact-section">
    <div class="container-fluid">


        <div class="row">

            <div class="col-lg-7 offset-lg-1">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14471.667252580726!2d121.18249195!3d24.93490365!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x34682361c065cbe9%3A0xc24080034849b3e3!2z5Yue5YuV6YOo5Yue5YuV5Yqb55m85bGV572y5qGD56u56IuX5YiG572y5bm8542F6IG35qWt6KiT57e05aC0!5e0!3m2!1szh-TW!2stw!4v1616570802916!5m2!1szh-TW!2stw"
                        width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy">

                </iframe>
            </div>
            <div class="col-lg-3 offset-lg-1 ">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>地 址</h3>
                        <p>@Model.address</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>電 話</h3>
                        <p>@Model.tel</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-time"></i></span>
                    <div class="media-body">
                        <p>營業時間 </p>
                        <h3>@Model.opentime to @Model.closetime</h3>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body" >
                        <p>有任何問題, 請隨時與我們聯絡!</p>
                    </div>
                </div>
                <div class="col d-flex" onclick="golink()">
                    <button class="btn btn-outline-danger btn-lg">
                         請點我!
                    </button>
                </div>
            </div>
        </div>



    </div>


</section>

<script>

    function golink() {
        window.open("https://forms.gle/k9Hfuf8fy4EfzgLU8")
    }
</script>
