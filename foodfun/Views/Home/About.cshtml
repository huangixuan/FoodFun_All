@{
    ViewBag.Title = "關於我們";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="aboutCont">

    <div class="row">
        <div class="col-12 banner ">

            <div class="carousel silde" data-ride="carousel" style="">
                <h2>@ViewBag.Title</h2>
                <div class="carousel-inner " style="height:500px;">
                    @foreach (var item in Model.About)
                    {
                        if (item.sortid == 1)
                        {
                            <div class="carousel-item active"><img src="@Url.Content(item.about_path)" alt="" class="img-fluid"></div>
                        }
                        else
                        {
                            <div class="carousel-item "><img src="@Url.Content(item.about_path)" alt="" class="img-fluid"></div>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
    @*=========公司簡介=========*@
    <div class="row my-2">

        <div class="col-xl-8 offset-xl-2 col-12">
            <div class="about-pro">
                <h1>    我們的初衷 ~ </h1>
                <p>@Html.Raw(@Model.Company.description)</p>

            </div>
        </div>

    </div>
    @*=========公司理念 =========*@

    <div class="row my-2 " style="margin-left:10px; margin-top:20px;">
        <div class="col-8 offset-2 col-12">
            <h1>    我們的理念 ~ </h1>
        </div>
        <div class="col-xl-8 offset-xl-2 col-12">
            <div class="row">

                @foreach (var item in Model.About)
                {

                    <div class="col-6 my-3">
                        <div class="row ">
                            <div class="col-12 col-md-6">
                                <h1>@item.sortid </h1>
                                <h2 class="text-muted">@item.corevalue_title</h2>
                                <p class="m-1 pl-1 text-success">@item.corevalue_descpt</p>
                            </div>
                            <div class="col-12 col-md-6">
                                <img src="@Url.Content(item.corevalue_path)" alt="" class="img-thumbnail ">
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>




